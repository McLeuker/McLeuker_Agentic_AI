# McLeuker Agentic AI Platform - Environment Variables

# --- API Keys ---
# At least one LLM key is required for the platform to function.
# You can get keys from https://openai.com/ and https://x.ai/
OPENAI_API_KEY="sk-..."
GROK_API_KEY="..."

# At least one search key is highly recommended for real-time web research.
# You can get keys from https://serper.dev/ and https://tavily.com/
SERPER_API_KEY="..."
TAVILY_API_KEY="..."

# --- LLM Settings ---
# Set the default LLM provider to use ("openai" or "grok").
DEFAULT_LLM_PROVIDER="openai"

# Specify the models to use for each provider.
OPENAI_MODEL="gpt-4-turbo-preview"
GROK_MODEL="grok-1.5-flash"

# --- Application Settings ---
# Set to True for development to enable debug logs and auto-reloading.
# Set to False for production.
DEBUG=True

# Version of the application.
APP_VERSION="1.0.0"

# --- Directories ---
# You can override the default output and temp directories if needed.
# OUTPUT_DIR="/path/to/your/outputs"
# TEMP_DIR="/path/to/your/temp"
