# McLeuker Agentic AI Platform - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# LLM PROVIDERS
# ============================================

# OpenAI (Primary LLM)
OPENAI_API_KEY="sk-proj-..."
OPENAI_MODEL="gpt-4-turbo-preview"

# Grok (xAI)
GROK_API_KEY="xai-..."
GROK_MODEL="grok-2-latest"

# Hugging Face
HUGGINGFACE_API_KEY="hf_..."

# Perplexity AI
PERPLEXITY_API_KEY="pplx-..."

# DeepSeek
DEEPSEEK_API_KEY="..."

# Default LLM Provider ("openai", "grok", "perplexity", "deepseek")
DEFAULT_LLM_PROVIDER="openai"

# ============================================
# SEARCH & RESEARCH APIs
# ============================================

# Google Search (SerpAPI or Custom Search)
GOOGLE_SEARCH_API_KEY="..."

# Bing Search
BING_API_KEY="..."

# Firecrawl (Web Scraping)
FIRECRAWL_API_KEY="fc-..."

# ============================================
# AUTHENTICATION (Google OAuth)
# ============================================

GOOGLE_CLIENT_ID="...apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-..."

# Supabase
SUPABASE_URL="https://....supabase.co"
SUPABASE_ANON_KEY="..."
SUPABASE_REDIRECT_URI="https://....supabase.co/auth/v1/callback"

# ============================================
# PAYMENTS (Stripe)
# ============================================

STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_RESTRICTED_KEY="rk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================
# MEDIA & VOICE
# ============================================

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY="sk_..."

# ============================================
# APPLICATION SETTINGS
# ============================================

# Debug mode (True for development, False for production)
DEBUG=True

# Application version
APP_VERSION="1.0.0"

# Server settings
HOST="0.0.0.0"
PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://mcleukerai.com,https://www.mcleukerai.com"

# ============================================
# DIRECTORIES
# ============================================

# Output directory for generated files
OUTPUT_DIR="./outputs"

# Temporary directory
TEMP_DIR="./temp"
